<p id="notice"><%= notice %></p>

<h1>Volunteer Attributes</h1>

<table>
  <thead>
    <tr>
      <th>Volunteer</th>
      <th>Organization</th>
      <th>Mentor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @volunteer_attributes.each do |volunteer_attribute| %>
      <tr>
        <td><%= volunteer_attribute.volunteer %></td>
        <td><%= volunteer_attribute.organization %></td>
        <td><%= volunteer_attribute.mentor %></td>
        <td><%= link_to 'Show', volunteer_attribute %></td>
        <td><%= link_to 'Edit', edit_volunteer_attribute_path(volunteer_attribute) %></td>
        <td><%= link_to 'Destroy', volunteer_attribute, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

